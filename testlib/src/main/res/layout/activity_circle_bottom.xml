<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tran_white"
    android:orientation="vertical"
    tools:context=".Circle_bottom_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_simple_bottom"
            android:background="@color/tranparent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/iv_pic"
            android:visibility="visible"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_simple_show"
            android:background="@color/tranparent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
        android:id="@+id/view_fake"
        android:visibility="visible"
        android:background="@color/tranparent"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_controller"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/tranparent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.example.base_common_lib.ui.custom_view.CustomCircleProgressBar
            android:id="@+id/ccp_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:direction="top"
            app:max_progress="100"
            app:outside_color="#8DFA4C48"
            app:inside_bg_color="@color/red_02"
            app:progress_text_color="@color/white"
            app:progress_text_size="@dimen/dk_font_size_22"
            app:outside_radius="60dp"
            app:inside_color="@color/gray_02"
            app:progress="0"
            app:progress_width="12dp"/>


    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_lock_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <com.github.ihsg.patternlocker.PatternLockerView
            android:layout_centerInParent="true"
            android:id="@+id/patternLockerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            app:plv_enableSkip="true"
            app:plv_enableHapticFeedback="true"
            app:plv_color="@color/gray"
            app:plv_enableAutoClean="false"
            app:plv_errorColor="@color/red"
            app:plv_fillColor="@color/white"
            app:plv_hitColor="@color/colorPrimary"
            app:plv_lineWidth="3dp" />
    </RelativeLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="15dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_clear_model"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:contentPadding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费版"
                    android:textSize="30sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <VideoView
            android:layout_width="0dp"
            android:layout_height="20dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_dirty_model"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:contentPadding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付费版"
                    android:textSize="30sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>